<h1>Create</h1>
<div class="form">
  <form action='/create' method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{name}}">
    <label for="name">Description</label>
    <textarea id="name" name="description">{{description}}</textarea>
    <label for="image">ImageUrl</label>
    <input type="text" id="image" name="imageUrl" value="{{imageUrl}}">
    <label for="difficulty">Difficulty</label>
    <select id="difficulty" name="difficulty">
      <option value="1" {{#is difficulty 1}}selected{{/is}}>1 - Very Easy</option>
      <option value="2" {{#is difficulty 2}}selected{{/is}}>2 - Easy</option>
      <option value="3" {{#is difficulty 3}}selected{{/is}}>3 - Medium (Standard 3x3)</option>
      <option value="4" {{#is difficulty 4}}selected{{/is}}>4 - Intermediate</option>
      <option value="5" {{#is difficulty 5}}selected{{/is}}>5 - Expert</option>
      <option value="6" {{#is difficulty 6}}selected{{/is}}>6 - Hardcore</option>
    </select>
    <input type="submit" value="Create">
  </form>
</div>