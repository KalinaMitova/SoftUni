<h1>Chatroom with {{receiver.username}}</h1>
{{#if isReceiverBlocked}}
<form method="post" class="chat-form" action="/unblock/{{receiver.username}}">
    <input value="{{receiver.id}}" name="receiverId" hidden />
    <button class="btn btn-success">Unblock</button>
</form>
{{else}}
<form method="post" class="chat-form" action="/block/{{receiver.username}}">
    <input value="{{receiver.id}}" name="receiverId" hidden />
    <button class="btn btn-danger">Block</button>
</form>
{{/if}}
<div class="chat-wrapper">
    <div id="message-wrapper">
        {{#each messages}}
        <div class="message-row">
            {{#each images}}
            <img class="thread-message {{../isMine}}" src="{{this}}">
            {{/each}}
            <span class="thread-message {{isMine}}">{{{content}}}</span>
        </div>
        {{/each}}
    </div>
    <form action="/threads/{{receiver.id}}" method="post" class="chat-form">
        {{#if amIBlocked}}
        <textarea rows="5" name="message" placeholder="message" disabled></textarea>
        {{else}}
        <textarea rows="5" name="message" placeholder="message"></textarea>
        {{/if}}
        <input value="{{threadId}}" name="threadId" hidden />
        <button class="btn btn-primary send">Send</button>
    </form>
</div>