<h2 style="text-align:center;">Full Name: {{fullName}}</h2>
<h3 style="text-align:center;">Email: {{email}}</h3>
<hr>
<div class="container body-content">
    <div class="row">
        {{#unless articles}}
        <h2 style="text-align:center;">There are no articles.</h2>
        {{/unless}}
        {{#each articles}}
        <div class="col-md-6">
            <article>
                <header>
                    <h2>{{title}}</h2>
                </header>

                <p>{{content}}</p>

                <footer>
                    <div class="pull-right">
                        <a class="btn btn-success btn-xs" href="/article/edit/{{id}}">Edit &raquo;</a>
                        <a class="btn btn-danger btn-xs" href="/article/delete/{{id}}">Delete &raquo;</a>
                        <a class="btn btn-default btn-xs" href="/article/details/{{id}}">Read more &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
        {{/each}}
    </div>
</div>