<h1>My Profile</h1>
<div class="profile-box">
  <img src="{{profilePictureUrl}}">
  <div class="profile">
    <div class="info">
      <h3>My Teams</h3>
      {{#each teams}}
      <form action="/user/team/leave/{{id}}" method="POST">
        <p>{{name}}</p>
        <input type="submit" value="Leave Team">
      </form>
      {{/each}}
      {{#unless teams}}
      <p>You have no teams</p>
      {{/unless}}
    </div>
    <div class="more-info">
      <h3>My Projects</h3>
      {{#each projects}}
      <p>{{name}}</p>
      {{/each}}
      {{#unless projects}}
      <p>You have no projects!</p>
      {{/unless}}
    </div>
  </div>
</div>