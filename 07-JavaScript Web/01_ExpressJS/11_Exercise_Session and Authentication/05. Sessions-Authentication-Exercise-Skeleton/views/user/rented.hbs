{{#unless rents}}
<h2>There are no rented cars.</h2>
{{/unless}}

<table>
    <thead>
        <tr>
            <th>Model</th>
            <th>Price Per Day</th>
            <th>Rent Expires</th>
        </tr>
    </thead>
    <tbody>
        {{#each rents}}
        <tr>
            <td>{{car.model}}</td>
            <td>{{car.pricePerDay}} &euro;</td>
            <td>In {{days}} days.</td>
        </tr>
        {{/each}}
    </tbody>
</table>